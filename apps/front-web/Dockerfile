# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build front-web`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t front-web`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system front-web && \
          adduser --system -G front-web front-web

COPY dist/apps/front-web front-web
RUN chown -R front-web:front-web .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix front-web --omit=dev -f install

CMD [ "node", "front-web" ]
